<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Projet_Final.Pages.Admin.SeanceAdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projet_Final.Pages.Admin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:Classes="using:Projet_Final.Classes"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid Padding="40" x:Name="mainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Margin="0 0 0 30" FontSize="32" FontWeight="SemiBold" TextDecorations="Underline" VerticalAlignment="Center" Grid.Row="0">Liste des séances</TextBlock>
            <Button Background="Transparent" Margin="0 0 0 30" BorderThickness="0" Name="btn_ajouter" Click="btn_ajouter_Click" FontSize="18" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center">+ Ajouter une séance</Button>

            <Grid Grid.Row="1" ColumnSpacing="40" Margin="3 0 0 5" HorizontalAlignment="Center" Padding="0 0 0 10" BorderThickness="0 0 0 4" BorderBrush="Green">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Id" Grid.Column="0" TextAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Text="Nom d'activité" Grid.Column="1" TextAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Text="Type d'activité" Grid.Column="2" TextAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Text="Date" Grid.Column="3" TextAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Text="Heure" Grid.Column="4" TextAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Text="Appréciation générale" Grid.Column="5" TextAlignment="Center" FontWeight="SemiBold"/>
            </Grid>
            
            <ListView x:Name="lv_liste_seances" Grid.Row="2" HorizontalAlignment="Center" SelectionChanged="lv_liste_seances_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="Classes:Seance">
                        <Grid ColumnSpacing="40" BorderThickness="0 0 0 1" Padding="0 0 0 10" BorderBrush="gray">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="73"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="140"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Bind Id}" Grid.Column="0" TextAlignment="Center"/>
                            <TextBlock Text="{x:Bind Nom_activite}" Grid.Column="1" TextAlignment="Center"/>
                            <TextBlock Text="{x:Bind Type_activite}" Grid.Column="2" TextAlignment="Center"/>
                            <TextBlock Text="{x:Bind DateStr}" Grid.Column="3" TextAlignment="Center"/>
                            <TextBlock Text="{x:Bind Heure}" Grid.Column="4" TextAlignment="Center"/>
                            <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                                <TextBlock Text="{x:Bind Appreciation_general}" Grid.Column="5" Width="20" TextAlignment="Center"/>
                                <Button FontSize="8" Background="Transparent" x:Name="btn_delete" Click="btn_delete_Click">X</Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>
